/*

	
	
//	>> Switch Statement <<
//	Switch is a selection statement that chooses a single switch section to execute 
//	from a list of candidates based on a pattern match with the match expression.
//  BY KRD TECH Channel on YouTube.

	Switch writing form:

	switch (Name) 
	{

	case expression1: 
				 Some Codes
	break;

	case expression2: 
				 Some Codes
	break;

	case expression3: 
				 Some Codes
	break;

	default:
				 Some Codes
	break;


	}
	
	
	
	switch (Name){
		case "Muhammad":
		Console.WriteLine("Name is Muhammad");
		break;
		case "Ahmad": 
		Console.WriteLine("Ahmad");
		break;
		default:
		Console.WriteLine("Input Name invaild");
		break;
		
	}

            
 


*/

